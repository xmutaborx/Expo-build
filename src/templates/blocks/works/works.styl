.works
  margin-top 75px
  padding-bottom 37px
  margin-bottom 220px
  position relative

  &:before
    content ''
    position absolute
    width 477px
    height 271px
    background url('../images/gadget2.png')
    background-size cover
    left 0
    bottom -220px

  @media (max-width: 500px)
    margin-bottom 150px
    &:before
      width 100%
      height 190px
      bottom -150px

  &__title
    margin 0 auto
    max-width 470px
    margin-bottom 60px

  &__title
    text-align center
    font-size 35px
    color #fff
    background #021631
    font-family ProximaNova-Extrabold

  &__container
    max-width 1400px
    margin 0 auto
    padding 0 30px
    position relative

    &:before
      content ''
      position absolute
      width 2px
      height 40%
      background #021631
      left 50%
      top 50%
      transform translate(-50%, -50%)

    @media(max-width: 1100px)
      &:before
        width 0

  &__wrapper
    display flex
    justify-content space-between

    @media(max-width: 760px)
      flex-direction column

  &__list
    list-style-type none
    width 500px
    height 500px
    display flex
    flex-direction column
    justify-content space-between

    @media(max-width: 760px)
      width auto

    & + &
      padding-left 70px

      @media(max-width: 760px)
        padding-left 40px
        margin-top 20px

  &__list-item
    margin 0
    position relative

    &:not(:last-child)
      flex-grow 1

      &:after
        content ''
        position absolute
        width 2px
        height calc(100% - 43px)
        background #021631
        left -35px
        top 43px

    &:before
      content ''
      position absolute
      width 43px
      height 43px
      border 2px solid #021631
      left -55px
      top 0
      border-radius 50%

  &__text
    font-family ProximaNova-Extrabold
    font-size 25px
    position relative

    @media (max-width 400px)
      font-size 20px

    &:before
      content ''
      position absolute
      width 21px
      height 21px
      background linear-gradient(90deg, rgba(255,113,0,1) 0%, rgba(255,177,42,1) 100%)
      border-radius 50%
      top 11px
      left -44px


.btn-request
  font-family ProximaNova-Extrabold
  font-size 19px
  padding 16px 25px 12px
  border none
  background linear-gradient(90deg, rgba(255,113,0,1) 0%, rgba(255,177,42,1) 100%)
  color #fff
  border-radius 31px
  cursor pointer
  transition all 0.5s ease

  &:hover
    opacity 0.6

.request__btns
  position relative

.btn-card
  background linear-gradient(90deg, rgba(255,113,0,1) 0%, rgba(255,177,42,1) 100%)
  border-radius 25px
  width 250px
  padding 12px 0
  height 50px
  text-align center
  border 2px solid #021631
  border-radius 2px
  cursor pointer
  transition all 0.3s ease
  position relative
  z-index 2

  &:before
    content ''
    position absolute
    width 100%
    height 100%
    left 0
    top 0
    background #fff
    transition all 0.3s ease

.back
  position absolute
  font-size 14px
  font-family ProximaNova-Extrabold
  left 0
  padding-top 16px
  z-index 5
  width 100%
  height 100%
  text-align center
  cursor pointer
  transition all 0.3s ease
  color #021631

  &:hover
    color #fff

    & ~ .btn-card
      &:before
        width 0%
