.main
  width 100%
  height 863px
  background-image: url('../images/background.png')
  padding-top 240px
  margin-bottom 40px

  @media(max-width: 830px)
    padding-top 0px

  &__container
    max-width 810px
    padding 0 20px
    margin-left 33%

    @media(max-width: 1150px)
      margin 0 auto
      background rgba(0,0,0,0.4)

    @media(max-width: 830px)
      padding 15px 0
      height 100%
      background rgba(0,0,0,0.6)

  &__head
    @media(max-width: 500px)
      padding 0 10px

  &__body
    display flex
    margin-bottom 30px
    @media(max-width: 830px)
      flex-direction column
      align-items center


  &__footer
    display flex

    @media(max-width: 830px)
      flex-direction column
      align-items center

  &__title
    font-size 50px
    color #fff
    text-align center
    font-family 'Noto Serif', serif

    @media(max-width: 830px)
      font-size 35px

    @media(max-width: 650px)
      font-size 21px

  &__block
    width 25%
    @media(max-width: 830px)
      width 100%
    & + &
      @media(max-width: 830px)
        margin-top 25px


  &__block-title
    font-family ProximaNova-Bold
    background linear-gradient(90deg, rgba(255,113,0,1) 0%, rgba(255,177,42,1) 100%)
    -webkit-background-clip text
    -webkit-text-fill-color transparent
    color #fff
    font-size 35px
    font-weight bold
    white-space nowrap
    text-align center
    @media screen and (-ms-high-contrast: active), (-ms-high-contrast: none)
      color orange
      background none



  &__block-text
    font-family ProximaNova-Bold
    color #fff
    text-align center
    font-size 21px

  &__footer
    display flex
    justify-content space-between

  &__tips-text
    font-family ProximaNova-Bold
    color #c7d0e0
    font-size 21px

  &__tips
    position relative
    @media(max-width: 830px)
      text-align center
    & + &
      &:before
        content ''
        position absolute
        width 2px
        height 100%
        background #c7d0e0
        top 0
        left -12px
      @media(max-width: 830px)
        &:before
          width 0
