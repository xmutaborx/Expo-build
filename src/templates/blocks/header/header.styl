.header
  background: #c6d0e0;

  &__container
    display flex
    align-items center
    padding 20px 45px

    @media(max-width: 1400px)
      flex-direction column

  &__wrapper
    display flex
    align-items center

    @media(max-width: 900px)
      flex-direction column
      align-items center

  &__contacts
    display flex
    align-items center

    @media(max-width: 1400px)
      margin-top 20px

    @media(max-width: 900px)
      display flex
      flex-direction column
      margin-top 10px


  &__info
    margin-right 40px

    @media(max-width: 900px)
      text-align center
      margin 0
      margin-top 10px

  &__info-text,
  &__text
    margin 0
    padding 0
    white-space nowrap

  &__info-text
    font-family ProximaNova-Extrabold

  &__text
    line-height 1
    &--bold
      font-family ProximaNova-Bold

  &__logo
    width 205px
    height 95px
    margin-right 40px
    flex-shrink 0
    @media(max-width: 900px)
      margin 0
    img
      width 100%

  &__logo2
    margin-right 10px

    @media(max-width: 900px)
      margin 0
      margin-bottom 10px

  &__block
    @media(max-width: 900px)
      text-align center
    & + &
      margin-left 20px
      @media(max-width: 900px)
        margin 0
        margin-top 10px
